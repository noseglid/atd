<rml>
  <head>
    <link type="text/rcss" href="style-generic.rcss"  />
    <link type="text/rcss" href="style-specific.rcss" />
  </head>
  <body class="window">
    <div id="main" class="wide-container levelselect">
      <div class="header">Battleground</div>

      <div id="levels-container">
        <datagrid source="levels.list" id="levellist" class="selectable">
          <col fields="name" width="30%">Crater</col>
          <col fields="waves" width="20%">Waves</col>
          <col fields="completed" width="10%">Completed</col>
        </datagrid>
      </div>

      <p class="link" id="back">Back to title</p>
    </div>
  </body>
</rml>
